# .env.production

# Application
APP_NAME="Bridge Service"
APP_ENV=production
APP_KEY=base64:APP_KEY
APP_DEBUG=false
APP_URL=https://bridge.yourdomain.com

# Domain (used by Traefik)
DOMAIN=bridge.yourdomain.com

# Database
DB_PASSWORD=postgres

# Redis
REDIS_PASSWORD=redis

# External Services
KRAYIN_URL=https://crm.yourdomain.com
CHATWOOT_URL=https://chat.yourdomain.com
CHATWOOT_WEBHOOK_SECRET=chatwoot_key

# Nginx Network
NGINX_NETWORK=network_name

# JWT
SANCTUM_EXPIRATION=60

# LGPD
LGPD_RETENTION_DAYS=1825